{
    "name": "personal-website",
    "version": "1.0.0",
    "description": "Brian Fajardo's personal website",
    "main": "index.js",
    "repository": "https://github.com/brianfajardo/personal-site.git",
    "author": "Brian Fajardo <bmf5@hotmail.com>",
    "license": "MIT",
    "scripts": {
        "dev": "concurrently \"yarn sass:watch\" \"yarn live-reload\"",
        "format": "prettier --write '**/*'",
        "sass:watch": "node-sass --output-style compressed --watch scss/main.scss styles.css",
        "live-reload": "livereload \"./src/index.html, ./src/styles.css\""
    },
    "devDependencies": {
        "concurrently": "^4.1.0",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.5",
        "livereload": "^0.7.0",
        "node-sass": "^4.11.0",
        "prettier": "1.16.4",
        "stylelint": "^9.10.1",
        "stylelint-config-standard": "^18.2.0",
        "stylelint-scss": "^3.5.4"
    }
}
